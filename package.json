{
  "name": "node-typescript-template",
  "version": "0.0.0",
  "private": true,
  "description": "Template for TypeScript in Node.js",
  "keywords": [
    "Node.js",
    "TypeScript",
    "template"
  ],
  "homepage": "https://github.com/104corp/node-typescript-template#readme",
  "bugs": {
    "url": "https://github.com/104corp/node-typescript-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/104corp/node-typescript-template.git"
  },
  "execMap": {
    "ts": "node -r ts-node/register"
  },
  "license": "SEE LICENSE IN LICENSE file",
  "author": "Shueh Chou Lu <evan.lu@104.com.tw>",
  "main": "index.js",
  "scripts": {
    "precompile": "rimraf src/**/*.js test/**/*.js",
    "compile": "tsc --project tsconfig.production.json",
    "task-build-grpc-type": "node node_modules/@grpc/proto-loader/build/bin/proto-loader-gen-types.js --grpcLib=@grpc/grpc-js --outDir=src/shared/ src/shared/*.proto",
    "test": "mocha",
    "pretest-coverage": "rimraf src/**/*.js test/**/*.js",
    "test-coverage": "nyc mocha",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts' && npx sort-package-json package.json && npmPkgJsonLint -q ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "git secrets --scan"
    }
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.2.12",
    "@grpc/proto-loader": "^0.6.1",
    "express": "^4.17.1",
    "express-graphql": "^0.12.0",
    "got": "^11.8.2",
    "graphql": "^15.5.0",
    "pino": "^6.11.3",
    "statsd-client": "^0.4.6",
    "zipkin": "^0.22.0",
    "zipkin-instrumentation-express": "^0.22.0",
    "zipkin-transport-http": "^0.22.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/cls-hooked": "^4.3.3",
    "@types/express": "^4.17.11",
    "@types/got": "^9.6.11",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.28",
    "@types/pino": "^6.3.8",
    "@types/sinon": "^9.0.11",
    "@types/statsd-client": "^0.4.1",
    "@typescript-eslint/eslint-plugin": "^4",
    "@typescript-eslint/parser": "^4",
    "chai": "^4.3.0",
    "eslint": "^7",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4",
    "mocha": "^8.3.0",
    "nodemon": "^2.0.7",
    "npm-package-json-lint": "^5.1.0",
    "npm-package-json-lint-config-default": "^3.0.0",
    "nyc": "^15.1.0",
    "sinon": "^10.0.0",
    "sort-package-json": "^1",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "engines": {
    "node": ">=12"
  }
}
